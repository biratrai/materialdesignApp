<resources xmlns:tools="http://schemas.android.com/tools">


    <!-- Base application theme. -->
    <style name="AppTheme"  parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--The primary brand color of your app, used most predominantly in theming-->
        <item name="colorPrimary">@color/colorPrimary</item>

        <item name="colorPrimaryDark">@color/colorPrimaryVariant</item>
        <!--A lighter/darker variant of your primary brand color, used sparingly in theming-->
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>

        <!--The color used for elements displayed on top of your primary colors (eg. Text and icons,
        often white or semi-transparent black depending on accessibility)-->
        <item name="colorOnPrimary">@color/colorPrimaryVariant</item>

        <!--The secondary brand color of your app, used mostly as an accent for certain widgets that
        need to stand out-->
        <item name="colorSecondary">@color/accent</item>

        <!--A lighter/darker variant of your secondary brand color, used sparingly in theming-->
        <item name="colorSecondaryVariant">#0039CB</item>

        <!--The color used for elements displayed on top of your secondary colors-->
        <item name="colorOnSecondary">#FFFFFF</item>

        <!--The color used for errors (often a shade of red)-->
        <item name="colorError">#F44336</item>

        <!--The color used for elements displayed on top of your error color-->
        <item name="colorOnError">#FFFFFF</item>

        <!--The color used for surfaces (i.e. Material “sheets”)-->
        <item name="colorSurface">#FFFFFF</item>

        <!--The color used for elements displayed on top of your surface color-->
        <item name="colorOnSurface">#212121</item>

        <!--The color behind all other screen content-->
        <item name="android:colorBackground">@color/background</item>

        <!--The color used for elements displayed on top of your background color-->
        <item name="colorOnBackground">#212121</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
    </style>

    <style name="MyCustomToolBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorSecondary">#00F</item>
        <item name="android:textColorPrimary">#F00</item>
    </style>

    <style name="TextAppearance.MyMaterialApp.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    <style name="Widget.MyMaterialApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.MyMaterialApp.TextInputLayout.HintText</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="TextAppearance.MyMaterialApp.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    <style name="Widget.MyMaterialApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="backgroundTint">?attr/colorPrimaryDark</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">@animator/my_material_next_button_state_list_anim</item>
    </style>
    <style name="Widget.MyMaterialApp.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
</resources>
